---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<section  id="cta" class="pb-20">
  <Container>
    <div
      class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900"
    >
      <div class="invisible sm:visible absolute flex right-0 top-0 h-full w-full justify-end">
        <div class="w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl">
            <span
              class="absolute w-16 h-16 -top-1 -right-1 bg-primaryteal rounded-md rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -right-1 bg-primarypink rounded-md rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
            ></span>
          </div>
      </div>

      <div class="invisible sm:visible absolute left-0 bottom-0 h-full w-full flex items-end">
        <div class="w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl">
            <span
              class="absolute w-16 h-16 -top-1 -right-1 bg-primarypink rounded-md rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -right-1 bg-primaryteal rounded-md rotate-45"
            ></span>
            <span
              class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
            ></span>
          </div>
      </div>
      <div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
        <h1
          class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight
          font-bold text-heading-1"
        >
        <span class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-500 from-20% via-primary via-30% to-indigo-600">Elevate</span> 
        your Business to 
        <span class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-500 from-20% via-primary via-30% to-indigo-600">new levels</span>
        </h1>
        <Paragraph className={"pt-10"}>
          Contact us to get a free consultation to see how we can help excel your business forward
        </Paragraph>
        <div class="mx-auto max-w-md sm:max-w-xl pt-10">
          <Button buttonType="button" variant={"primary"}>
            <a href="/contact">
              <span class="text-white relative z-[5]">Get In Touch</span>
            </a>
          </Button>
        </div>
      </div>
    </div>
  </Container>
</section>
